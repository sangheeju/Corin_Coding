	<beans:bean class="kr.co.korogom.comment.AuthenticationInterceptor" id="auth"> </beans:bean>
	<!-- 인터셉터를 위한 맵핑 경로 설정하여 auth의 메소드를 수행하게 한다. -->
			<interceptors>
				<interceptor>
					<mapping path="/member/memberPage" />   
					<mapping path="/member/memberUpdate" />
					<mapping path="/member/myPage" />
					<mapping path="/member/petInfo" />
					<mapping path="/member/petPage" />
					<mapping path="/member/petUpdate" />
					<mapping path="/member/pregister" />
					<beans:ref bean="auth" />			
				</interceptor>
			</interceptors>

	<beans:bean id="multipartResolver" 
		class="org.springframework.web.multipart.support.StandardServletMultipartResolver">
